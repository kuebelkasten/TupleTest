@typeparam TValue

<RadzenDropDown TValue="TValue" Data="@(Data)" TextProperty="Text" ValueProperty="Value" @bind-Value="@(Value)" />

@code {

    /// <summary>
    /// Gets or sets the data to be used for the dropdown
    /// </summary>
    [Parameter]
    public IEnumerable<(string Text, TValue Value)> Data { get; set; }

    /// <summary>
    /// Gets or sets the value of the dropdown
    /// </summary>
    [Parameter]
    public TValue Value { get; set; }
}
